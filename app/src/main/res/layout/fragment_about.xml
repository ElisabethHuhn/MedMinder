<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=  "http://schemas.android.com/tools"
    tools:context="com.androidchicken.medminder.MMMainActivityFragment"

    android:baselineAligned="false"
    android:layout_width=   "match_parent"
    android:layout_height=  "match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft=  "@dimen/activity_horizontal_margin"
    android:paddingRight= "@dimen/activity_horizontal_margin"
    android:paddingTop=   "@dimen/activity_vertical_margin"

    android:background="@color/colorScreenBackground"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <!-- About Screen Label -->
        <TextView
                android:text="@string/title_about"
                android:layout_height="wrap_content"
                android:layout_width ="wrap_content"
                android:layout_gravity="center"

                android:textSize="20sp"
                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
        <TextView
            android:text="@string/about_hint_label"
            android:layout_height="wrap_content"
            android:layout_width ="wrap_content"
            android:layout_gravity="center"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />

        <!-- Who Are We -->
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/about_who_Button"
            android:text="@string/about_who_label"

            android:enabled="true"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:background="@color/colorButton1Background"
            android:textColor="@color/colorTextBlack"
            />
        <EditText
            android:id="@+id/about_who_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:inputType="textMultiLine"
            android:clickable="false"
            android:focusable="false"
            android:scrollbars="vertical"

            android:text="@string/about_who_output"
            android:textColor="@color/colorTextBlack"
            android:background="@android:color/transparent"
            />

        <!-- Privacy -->
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/about_privacy_Button"
            android:text="@string/about_privacy_label"

            android:enabled="true"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:background="@color/colorButton1Background"
            android:textColor="@color/colorTextBlack"
            />
        <EditText
            android:id="@+id/about_privacy_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:inputType="textMultiLine"
            android:clickable="false"
            android:focusable="false"
            android:scrollbars="vertical"

            android:text="@string/about_who_output"
            android:textColor="@color/colorTextBlack"
            android:background="@android:color/transparent"
            />

        <!-- Eula -->
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/about_eula_Button"
            android:text="@string/about_eula_label"

            android:enabled="true"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:background="@color/colorButton1Background"
            android:textColor="@color/colorTextBlack"
            />
        <EditText
            android:id="@+id/about_eula_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:inputType="textMultiLine"
            android:clickable="false"
            android:focusable="false"
            android:scrollbars="vertical"

            android:text="@string/about_who_output"
            android:textColor="@color/colorTextBlack"
            android:background="@android:color/transparent"
            />

        <!-- Tips -->
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/about_tips_Button"
            android:text="@string/about_tips_label"

            android:enabled="true"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"

            android:background="@color/colorButton1Background"
            android:textColor="@color/colorTextBlack"
            />
        <EditText
            android:id="@+id/about_tips_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:inputType="textMultiLine"
            android:clickable="false"
            android:focusable="false"
            android:scrollbars="vertical"

            android:text="@string/about_who_output"
            android:textColor="@color/colorTextBlack"
            android:background="@android:color/transparent"
            />



    </LinearLayout>

</ScrollView>






