<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=  "http://schemas.android.com/tools"
    android:id=   "@+id/content_main"

    android:baselineAligned="false"
    android:layout_width=   "match_parent"
    android:layout_height=  "match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft=  "@dimen/activity_horizontal_margin"
    android:paddingRight= "@dimen/activity_horizontal_margin"
    android:paddingTop=   "@dimen/activity_vertical_margin"

    android:background="@color/colorScreenBackground"
    tools:context=     "com.androidchicken.medminder.MainActivityFragment"

    >

    <HorizontalScrollView
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:fillViewport= "true"
        >
        <!-- This layout is for Recording that medication has been taken -->
        <!--  -->



        <!-- with layout_width  = 0dp, ignore the content width, for horiz orient  -->
        <!-- with layout_height = 0dp, ignore the content height, vert orient      -->
        <!-- with layout_weight = 1, distribute width/height between views equally -->
        <!-- with gravity       = center, center text within button                -->
        <!-- with layout_gravity=start, place button on left of the row            -->
        <!-- with background,   = set button color to gray, grayer, grayest        -->
        <!-- with paddingStart, = set some space between this button and the next  -->

        <!-- Container for entire screen -->
        <LinearLayout
            android:layout_height= "match_parent"
            android:layout_width=  "wrap_content"

            android:orientation="vertical"
            >
            <!-- Row 1: Patient Name -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width ="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                >
                <TextView
                    android:labelFor="@+id/patientNickNameLabel"
                    android:text="@string/patient_title"
                    android:layout_height= "wrap_content"
                    android:layout_width = "wrap_content"

                    android:gravity      = "end"
                    android:paddingEnd   = "8dp"

                    android:background   = "@color/colorLabelBackground"
                    android:textColor    = "@color/colorTextBlack"
                    />

                <TextView
                android:id="@id/patientNickNameLabel"
                android:text="@string/patient_nick_name_label"
                android:layout_height= "wrap_content"
                android:layout_width = "wrap_content"
                android:layout_gravity="center"

                android:gravity      = "start"

                android:background   = "@color/colorWhite"
                android:textColor    = "@color/colorTextBlack"
                />

            </LinearLayout>

            <!-- Save Button, Edit Patient -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width ="match_parent"
                android:orientation="horizontal"

                >

                <!-- Save, Edit Patient, Select Patient -->
                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/patientSaveButton"
                    android:text="@string/save_label"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center|center_vertical"
                    android:layout_gravity="start"
                    android:layout_weight="10"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"

                    android:background="@color/colorButton1Background"
                    android:textColor="@color/colorTextBlack"
                    />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/patientProfileButton"
                    android:text="@string/patient_edit_profile_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center|center_vertical"
                    android:layout_gravity="start"
                    android:layout_weight="10"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"

                    android:background="@color/colorButton2Background"
                    android:textColor="@color/colorTextBlack"
                    />

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/selectPatientButton"
                    android:text="@string/select_patient_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:gravity="center|center_vertical"
                    android:layout_gravity="start"
                    android:layout_weight="10"

                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"

                    android:background="@color/colorButton2Background"
                    android:textColor="@color/colorTextBlack"
                    />

            </LinearLayout>

            <!-- Row 2: Medication Buttons -->
            <LinearLayout
                android:id="@+id/medButtonLayout"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                >
                <!-- Add Medication moved to Edit Patient fragment -->



                <!--  Medication Buttons are added programmatically by the fragment -->

            </LinearLayout>

            <!-- Row 3: Dose Taken fields added programmatically -->
            <LinearLayout
                android:id="@+id/medInputLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                >

                <!-- Date/Time -->


            </LinearLayout>

            <!-- Row 4: DDose Taken History -->
            <LinearLayout

                android:layout_height="wrap_content"
                android:layout_width= "match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingTop=    "10dp"
                >
                <!-- RecyclerView of History -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/doseHistoryList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>


        </HorizontalScrollView>

    </ScrollView>




