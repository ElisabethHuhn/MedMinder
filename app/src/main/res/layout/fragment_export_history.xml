<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=  "http://schemas.android.com/tools"
    android:id=   "@+id/content_main"

    android:baselineAligned="false"
    android:layout_width=   "match_parent"
    android:layout_height=  "match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft=  "@dimen/activity_horizontal_margin"
    android:paddingRight= "@dimen/activity_horizontal_margin"
    android:paddingTop=   "@dimen/activity_vertical_margin"

    android:background="@color/colorScreenBackground"
    tools:context=     "com.androidchicken.medminder.MMMainActivityFragment"

    >

    <!-- Container for entire screen -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_vertical"
        >


        <!-- Row 1: Patient Name -->
        <TableRow

            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="10dp"
            >

            <TextView
                android:labelFor="@+id/historyNickNameLabel"
                android:text="@string/title_patient"
                android:textSize="20sp"
                android:layout_height= "wrap_content"
                android:layout_width = "wrap_content"

                android:gravity      = "end"
                android:paddingEnd   = "8dp"

                android:background   = "@color/colorLabelBackground"
                android:textColor    = "@color/colorTextBlack"
                />

            <TextView
                android:id="@id/historyNickNameLabel"
                android:text="@string/patient_nick_name_label"
                android:textSize="20sp"
                android:layout_height= "wrap_content"
                android:layout_width = "wrap_content"
                android:layout_gravity="center"

                android:gravity      = "start"

                android:background   = "@color/colorWhite"
                android:textColor    = "@color/colorTextBlack"
                />

        </TableRow>

        <!-- Exit, Select Patient buttons -->
        <TableRow
            android:layout_height="match_parent"
            android:layout_width ="match_parent"
            android:paddingTop="10dp"

            >
            <!-- Export  -->
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/exportButton"
                android:text="@string/export_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:gravity="center|center_vertical"

                android:layout_weight="10"

                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"

                android:background="@color/colorButton1Background"
                android:textColor="@color/colorTextBlack"
                />

        </TableRow>

        <!-- Row : Directory Path -->
        <TableRow
            android:layout_width=  "match_parent"
            android:layout_height= "wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop=    "5dp"
            >
            <TextView
                android:id=           "@+id/directoryPathLabel"
                android:labelFor=     "@+id/directoryPath"
                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity=      "end"

                android:freezesText="true"

                android:focusable="false"

                android:text="@string/directory_path_label"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorLabelBackground"
                />
            <EditText
                android:id=           "@id/directoryPath"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="75"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "text"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="16dp"

                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
        </TableRow>

        <!-- Row : File Name -->
        <TableRow
            android:layout_width=  "match_parent"
            android:layout_height= "wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop=    "5dp"
            >
            <TextView
                android:id=           "@+id/fileNameLabel"
                android:labelFor=     "@+id/fileName"
                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity=      "end"

                android:freezesText="true"

                android:focusable="false"

                android:text="@string/export_filename_label"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorLabelBackground"
                />
            <EditText
                android:id=           "@id/fileName"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="75"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "text"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="16dp"

                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
        </TableRow>

        <!-- Row : File Extent -->
        <TableRow
            android:layout_width=  "match_parent"
            android:layout_height= "wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop=    "5dp"
            >
            <TextView
                android:id=           "@+id/fileExtentLabel"
                android:labelFor=     "@+id/fileExtent"
                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity=      "end"

                android:freezesText="true"

                android:focusable="false"

                android:text="@string/filename_extent_label"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorLabelBackground"
                />
            <EditText
                android:id=           "@id/fileExtent"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="75"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "text"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="16dp"

                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
        </TableRow>

        <!-- Row : Filter Start Date -->
        <TableRow
            android:layout_width=  "match_parent"
            android:layout_height= "wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop=    "15dp"
            >
            <TextView
                android:id=           "@+id/filterStartDateLabel"
                android:labelFor=     "@+id/filterStartDay"
                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity=      "end"

                android:freezesText="true"

                android:focusable="false"

                android:text="@string/start_date_label"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorLabelBackground"
                />
            <EditText
                android:id=           "@id/filterStartDay"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="2dp"

                android:hint="@string/export_day_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
            <EditText
                android:id=           "@+id/filterStartMonth"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="2dp"

                android:hint="@string/export_month_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
            <EditText
                android:id=           "@+id/filterStartYear"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="16dp"

                android:hint="@string/export_year_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
        </TableRow>

        <!-- Row : Filter End Date -->
        <TableRow
            android:layout_width=  "match_parent"
            android:layout_height= "wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop=    "5dp"
            >
            <TextView
                android:id=           "@+id/filterEndDateLabel"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity=      "end"

                android:freezesText="true"

                android:focusable="false"

                android:text="@string/end_date_label"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorLabelBackground"
                />

            <EditText
                android:id=           "@+id/filterEndDay"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="2dp"

                android:hint="@string/export_day_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
            <EditText
                android:id=           "@+id/filterEndMonth"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="2dp"

                android:hint="@string/export_month_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
            <EditText
                android:id=           "@+id/filterEndYear"

                android:layout_height="wrap_content"
                android:layout_width= "0dp"
                android:layout_weight="25"
                android:gravity="center_horizontal"

                android:freezesText="true"

                android:inputType=    "number"
                android:imeOptions=   "flagNoExtractUi"

                android:layout_marginEnd="16dp"

                android:hint="@string/export_year_hint"
                android:textColor=    "@color/colorTextBlack"
                android:background=   "@color/colorInputBackground"
                />
        </TableRow>

    </TableLayout>



    </ScrollView>




