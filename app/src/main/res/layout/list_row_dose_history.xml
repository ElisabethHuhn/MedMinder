<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"

    android:paddingTop="@dimen/interum_vertical"

    android:background="?android:attr/selectableItemBackground"

    >
    <!-- Layout for concurrent dose history -->

    <!-- Date -->
    <TextView
        android:id="@+id/doseDateLabel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="@string/dose_default_date"
        android:layout_marginEnd="1dp"

        android:background="@color/colorGrayest"
        />
    <!-- Time -->
    <EditText
        android:id="@+id/doseTimeInput"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="4"
        android:gravity="center"

        android:hint="@string/dose_default_time"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />
    <!-- Medication 1 -->
    <EditText
        android:id="@+id/doseMed1Input"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:hint="@string/patient_med_hint"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />
    <!-- Medication 2 -->
    <EditText
        android:id="@+id/doseMed2Input"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:hint="@string/patient_med_hint"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />
    <!-- Medication 3 -->
    <EditText
        android:id="@+id/doseMed3Input"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:hint="@string/patient_med_hint"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />
    <!-- Medication 4 -->
    <EditText
        android:id="@+id/doseMed4Input"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:hint="@string/patient_med_hint"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />
    <!-- Medication 5 -->
    <EditText
        android:id="@+id/doseMed5Input"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:hint="@string/patient_med_hint"

        android:inputType="text"
        android:imeOptions="flagNoExtractUi"
        android:layout_marginEnd="1dp"

        android:textColor="@color/colorTextBlack"
        android:background="@color/colorHistoryBackground"
        />

</LinearLayout>